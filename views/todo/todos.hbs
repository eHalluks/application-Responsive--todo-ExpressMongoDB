<div class="main-page-container">

    <header class="main-header-container">

        <div id="top"></div>

        <div class="main-h1-container">
            <h1>TODO Lista:</h1>
        </div>

        <div class="main-date-header-container">

            <div class="main-date-header-container">
                <div>
                    <p>Data</p>
                    <p>{{date}}</p>
                </div>
                <div>
                    <p>Godzina</p>
                    <p>{{time}}</p>
                </div>
            </div>


        </div>

    </header>

    <section class="master-todo-section">

        <div class="main-form-container">

            <form id="todoForm" class="main-form-container" action="/" method="POST">

                {{#if todo}}

                    <div>
                        <label>
                            <span class="order-number">1.)</span>Nazwa TODO
                            <input type="text" id="shortDescription" name="shortDescription" value="{{todo.shortDescription}}">
                        </label>
                    </div>

                    <div>
                        <label for="longDescription"><span class="order-number">2.)</span>Opis TODO</label>
                        <textarea id="longDescription" name="longDescription" rows="10">{{todo.longDescription}}</textarea>
                    </div>

                    <input type="hidden" id="id" name="id" value="{{todo._id}}">

                    <div>
                        <button type="submit">Aktualizuj</button>
                    </div>

                {{else}}

                    <div>
                        <label>
                            <span class="order-number">1.)</span>Nazwa TODO
                            <input type="text" id="shortDescription" name="shortDescription">
                        </label>
                    </div>

                    <div>
                        <label for="longDescription"><span class="order-number">2.)</span>Opis TODO</label>
                        <textarea id="longDescription" name="longDescription" rows="10"></textarea>
                    </div>

                    <div>
                        <button type="submit">Dodaj</button>
                    </div>

                {{/if}}

            </form>

        </div>


        <div class="main-todoList">

            {{#each todoList}}

                <div class="todos-container">

                    <details>
                        <summary>{{this.shortDescription}}</summary>
                        <p>{{this.longDescription}}</p>
                    </details>

                    <div class="edit-remove-btn-container">

                        <form action="/{{this._id}}?_method=GET" method="GET">
                            <button class="editBtn" name="editBtn" value="{{this._id}}">Edytuj</button>
                        </form>

                        <form action="/{{this._id}}?_method=DELETE" method="POST">
                            <button class="removeBtn" name="removeBtn" value="{{this._id}}">Usu≈Ñ</button>
                        </form>

                    </div>

                </div>

            {{/each}}

        </div>

    </section>
    <footer>
        <div class="main-footer-container">
            <div>
                <p>&copy; 2023 eHalluks</p>
            </div>
            <div class="links-container">
                <a href="https://www.ehalluks.com/policy-privacy">Privacy policy</a>
                <a href="https://www.linkedin.com/in/ehalluks/">LinkedIn</a>
                <a href="https://github.com/eHalluks">GitHub</a>
                <a href="https://www.ehalluks.com/">My website</a>
                <a href="#top" class="btn btn-primary">Top</a>
            </div>
        </div>
    </footer>


</div>